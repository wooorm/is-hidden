{
  "name": "is-hidden",
  "version": "1.1.0",
  "description": "Check if `filename` is hidden (starts with a dot)",
  "license": "MIT",
  "keywords": [
    "file",
    "is",
    "hidden",
    "dot",
    "full",
    "stop"
  ],
  "repository": "https://github.com/wooorm/is-hidden",
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "devDependencies": {
    "browserify": "^13.0.0",
    "esmangle": "^1.0.0",
    "nyc": "^8.4.0",
    "remark-cli": "^2.1.0",
    "remark-preset-wooorm": "^1.0.0",
    "tape": "^4.6.2",
    "xo": "^0.17.0"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "build-md": "remark . --quiet --frail --output",
    "build-bundle": "browserify index.js --bare -s isHidden > is-hidden.js",
    "build-mangle": "esmangle < is-hidden.js > is-hidden.min.js",
    "build": "npm run build-md && npm run build-bundle && npm run build-mangle",
    "lint": "xo",
    "test-api": "node test",
    "test-coverage": "nyc --reporter lcov tape test.js",
    "test": "npm run build && npm run lint && npm run test-coverage"
  },
  "xo": {
    "space": true,
    "ignores": [
      "is-hidden.js"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100
  },
  "remarkConfig": {
    "presets": "wooorm"
  }
}
